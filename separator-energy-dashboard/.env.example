# =============================================================================
# .env.example — Separator Energy Cost Dashboard
# Driftwood Dairy | El Monte, CA | Texas Automation Systems
#
# Copy to .env and adjust values for your deployment.
# These values are the defaults — only override what you need to change.
# =============================================================================

# --- TimeBase Historian Connection -------------------------------------------
# Docker default: uses container name on the industry40 network
# Local dev: override to 192.254.155.2
TIMEBASE_HOST=timebase-historian
TIMEBASE_PORT=4511
TIMEBASE_DATASET=Driftwood Historian

# --- Dashboard Port (what port the browser hits) -----------------------------
DASHBOARD_PORT=3000

# --- Facility Settings -------------------------------------------------------
FACILITY_TIMEZONE=US/Pacific

# --- Electrical Parameters ---------------------------------------------------
VOLTAGE=460
POWER_FACTOR=0.88

# --- Default Blended Rate (fallback when TOU not used) -----------------------
DEFAULT_RATE_PER_KWH=0.30

# --- SCE TOU-GS-2 Rate Structure ($/kWh) ------------------------------------
TOU_SUMMER_ON_PEAK=0.38
TOU_SUMMER_MID_PEAK=0.28
TOU_SUMMER_OFF_PEAK=0.18
TOU_WINTER_MID_PEAK=0.30
TOU_WINTER_OFF_PEAK=0.22
TOU_WINTER_SUPER_OFF_PEAK=0.16

# --- Analysis Window ---------------------------------------------------------
LOOKBACK_DAYS=7

# --- Data Quality ------------------------------------------------------------
MIN_GOOD_QUALITY=192

# --- CORS (comma-separated origins) ------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
